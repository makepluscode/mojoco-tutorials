<mujoco model="2dof_arm_vision">
    <option gravity="0 0 -9.81" timestep="0.002" />

    <worldbody>
        <light pos="0 0 3" dir="0 0 -1" />
        <geom name="floor" type="plane" size="5 5 0.1" rgba="0.8 0.9 0.8 1" />

        <!-- 1. 고정 카메라 (Fixed View): 로봇 베이스를 정중앙에 두도록 설정 -->
        <camera name="Fixed View" pos="1.2 -1.2 1.0" mode="targetbody" target="base" />
        <!-- 2. 탑 뷰 카메라 (Top View): 위에서 타겟(mocap)을 수직으로 추적 -->
        <camera name="Top View" pos="0.45 0 1.5" mode="targetbody" target="target" />

        <!-- 로봇 베이스 -->
        <body name="base" pos="0 0 0.1">
            <geom type="cylinder" size="0.1 0.1" rgba="0.5 0.5 0.5 1" />

            <!-- 첫 번째 링크 (어깨) -->
            <body name="link1" pos="0 0 0.1">
                <joint name="joint1" type="hinge" axis="0 0 1" damping="2.0" />
                <geom type="capsule" fromto="0 0 0 0.5 0 0" size="0.04" rgba="1 0 0 1" />

                <!-- 두 번째 링크 (팔꿈치) -->
                <body name="link2" pos="0.5 0 0">
                    <joint name="joint2" type="hinge" axis="0 0 1" damping="2.0" />
                    <geom type="capsule" fromto="0 0 0 0.4 0 0" size="0.03" rgba="0 1 0 1" />
                    <site name="ee" pos="0.4 0 0" size="0.01" rgba="1 1 0 1" />

                    <!-- 3. 1인칭 카메라 (Hand View): 로봇 팔 끝에 부착되어 타겟(mocap)을 항상 바라봄 -->
                    <camera name="Hand View" pos="0.1 0 0.2" mode="targetbody" target="target" />
                </body>
            </body>
        </body>

        <!-- 상호작용 타겟 -->
        <body name="target" mocap="true" pos="0.5 0.0 0.2">
            <geom type="sphere" size="0.03" rgba="1 1 1 0.5" contype="0" conaffinity="0" />
        </body>
    </worldbody>

    <actuator>
        <position name="arm_pos1" joint="joint1" kp="500" />
        <position name="arm_pos2" joint="joint2" kp="500" />
    </actuator>
</mujoco>
