<mujoco model="2dof_arm_encoder">
    <option gravity="0 0 -9.81" timestep="0.002" />

    <worldbody>
        <light pos="0 0 3" dir="0 0 -1" />
        <geom name="floor" type="plane" size="5 5 0.1" rgba="0.8 0.9 0.8 1" />

        <body name="base" pos="0 0 0.1">
            <geom type="cylinder" size="0.1 0.1" rgba="0.5 0.5 0.5 1" />

            <body name="link1" pos="0 0 0.1">
                <joint name="joint1" type="hinge" axis="0 0 1" damping="0.5" />
                <geom type="capsule" fromto="0 0 0 0.5 0 0" size="0.04" rgba="1 0 0 1" />

                <body name="link2" pos="0.5 0 0">
                    <joint name="joint2" type="hinge" axis="0 0 1" damping="0.5" />
                    <geom type="capsule" fromto="0 0 0 0.4 0 0" size="0.03" rgba="0 1 0 1" />
                    <site name="ee" pos="0.4 0 0" size="0.04" rgba="1 1 0 1" />
                </body>
            </body>
        </body>
    </worldbody>

    <actuator>
        <motor name="motor1" joint="joint1" gear="10" />
        <motor name="motor2" joint="joint2" gear="5" />
    </actuator>

    <sensor>
        <!-- 실제 값 (Ground Truth) -->
        <jointpos name="gt_pos1" joint="joint1" />
        <jointpos name="gt_pos2" joint="joint2" />
        
        <!-- 노이즈 및 해상도가 포함된 센서 시뮬레이션 (noise 속성 활용) -->
        <jointpos name="noisy_pos1" joint="joint1" noise="0.01" />
        <jointpos name="noisy_pos2" joint="joint2" noise="0.01" />
    </sensor>
</mujoco>
